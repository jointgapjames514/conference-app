<div class="container">
  

  <div class="authform">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3>Log in</h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right', tabindex: 4  %>
        <% end -%>
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control', tabindex: 1 %>
      </div>
      <div class="form-group">
        <%- if devise_mapping.recoverable? %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right', tabindex: 5 %>
        <% end -%>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', tabindex: 2 %>
      </div>
        <%= f.submit 'Log in', :class => 'button right', tabindex: 3 %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="width:150px">
            <label>
              <%= f.check_box :remember_me, tabindex: 6 %> Remember me
            </label>
          </div>
        <% end -%>
    <% end %>
  </div>
</div>