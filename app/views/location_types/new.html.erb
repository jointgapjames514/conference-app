<h2>Create Location Type</h2>

<%= form_for :location_type, url: location_types_path do |f| %>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category, :required => true %>
  </p>
 
  <p>
    <label>Icon</label>

    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', location_types_path %>