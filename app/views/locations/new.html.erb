<div class="form-group"><h1>Create A New Location</h1></div>

<%= form_for :location, url: locations_path, :html => { :id => "new_location_form" } do |f| %>
  <div class="form-group">
	<p>Fields with <span class="asteroid">*</span> are required.</p>
  </div>

  <div class="form-group row">
	<label for="name" class="col-xs-3 col-form-label">Name <span class="asteroid">*</span></label>
	<div class="col-xs-4">
	  <%= f.text_field :name, :required => true, :class => 'form-control' %>
	</div>
  </div>

  <div class="form-group row">
	<label for="address" class="col-xs-3 col-form-label">Address</label>
	<div class="col-xs-4">
	  <%= f.text_field :address, :class => 'form-control' %>
	</div>
  </div>

  <div class="form-group row">
	<label for="city" class="col-xs-3 col-form-label">City</label>
	<div class="col-xs-4">
	  <%= f.text_field :city, :class => 'form-control' %>
	</div>
  </div>

  <div class="form-group row">
	<label for="state" class="col-xs-3 col-form-label">Province / State</label>
	<div class="col-xs-4">
	  <%= f.text_field :state, :class => 'form-control' %>
	</div>
  </div>

  <div class="form-group row">
	<label for="country" class="col-xs-3 col-form-label">Country</label>
	<div class="col-xs-4">
	  <%= f.text_field :country, :class => 'form-control' %>
	</div>
  </div>

  <div class="form-group row">
	<label for="zip" class="col-xs-3 col-form-label">Postal Code /Zip</label>
	<div class="col-xs-4">
	  <%= f.text_field :zip, :class => 'form-control' %>
	</div>
  </div>

  <div class="address">
	  <div class="form-group row">
		<label for="map_address" class="col-xs-3 col-form-label">Map Address</label>
		<div class="row col-xs-6">
		  <div class="col-xs-10">
		  	<input id="location_map_address" name="location[map_address]" type="text" placeholder="Type in an address" value="111 Broadway, New York, NY" class="form-control" />	
		  </div>
		  
		  <div class="col-xs-2">
		  	<input id="find" type="button" value="Find" class="btn btn-primary" />
		  </div>     
		</div>
	  </div>

	  <div class="map_canvas"></div>

	  <div class="form-group row">
		<label for="lat" class="col-xs-3 col-form-label">Latitude</label>
		<div class="col-xs-3">
		  <input id="lat" name="lat" type="text" value="" class="form-control" disabled="disabled">
		  <input type="hidden" name="location[lat]" id="location_lat">
		</div>
	  </div>

	  <div class="form-group row">
		<label for="lng" class="col-xs-3 col-form-label">Longitude</label>
		<div class="col-xs-3">
		  <input id="lng" name="lng" type="text" value="" class="form-control" disabled="disabled">
		  <input type="hidden" name="location[lng]" id="location_lng">
		</div>
	  </div>

	  <div class="form-group row">
		<label class="col-xs-3 col-form-label">Formatted Address</label>
		<div class="col-xs-3">
		  <input name="formatted_address" type="text" value="" class="form-control" disabled="disabled">	  
		</div>
		<div class="col-xs-6">
			<a id="reset" href="#" style="display:none;">Reset Marker</a>
		</div>
	  </div>
  </div>

  <div class="form-group row">
	<label for="avatar" class="col-xs-3 col-form-label">Icon</label>
	<div class="col-xs-4">
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
	</div>
  </div>

  <div class="form-group row">
	<label for="phone" class="col-xs-3 col-form-label">Phone Number</label>
	<div class="col-xs-4">
	  <%= f.text_field :phone, :class => 'form-control' %>
	</div>
  </div>

  <div class="form-group row">
	<label for="description" class="col-xs-3 col-form-label">Description</label>
	<div class="col-xs-6">
	  <%= f.text_area :description, :class => 'form-control', :rows => 7 %>
	</div>
  </div>

  <div class="form-group row">
	<label for="location_type_id" class="col-xs-3 col-form-label">Location Type</label>
	<div class="col-xs-4">
	  <%= f.select :location_type_id, options_for_select(@location_types.map{ |c| [c.category, c.id] }), {}, {:class => 'form-control'} %>
	</div>
  </div>

  <div class="form-group row">
	<label for="subtitle" class="col-xs-3 col-form-label">Subtitle</label>
	<div class="col-xs-4">
	  <%= f.text_field :subtitle, :class => 'form-control' %>
	</div>
  </div>

  <%= f.hidden_field :event_id, :value => @event.id %> 

  <%= f.submit "Save New Location", :class => 'btn btn-primary' %>
  <%= link_to 'Back', event_data_path(event_id: @event.id, category: 'locations'), :class => 'btn btn-warning' %>

<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		$("#location_map_address").geocomplete({
	      map: ".map_canvas",
	      details: ".address",
	      markerOptions: {
	        draggable: true
	      }
	    });
	    
	    $("#location_map_address").on("geocode:dragged", function(event, latLng){
	      $("input[name=lat]").val(latLng.lat());
	      $("input[name=lng]").val(latLng.lng());
	      $("#reset").show();
	    });

	    $("#location_map_address").on("change", function(){
	    	$("#find").trigger("click");	
	    });
	    

	    $("#reset").click(function(){
	      $("#location_map_address").geocomplete("resetMarker");
	      $("#reset").hide();
	      return false;
	    });
	    
	    $("#find").click(function(){
	      $("#location_map_address").trigger("geocode");
	    }).click();	

	    $('#new_location_form').submit(function(event) {
	    	$('#location_lat').val($('#lat').val());
			$('#location_lng').val($('#lng').val());	
	    });

	    
	});	
</script>



