<div class="container">
	<div class="form-group"><h1>Edit Person</h1></div>

	<%= form_for :person, url: person_path(@person), method: :patch, :html => { :id => "new_person_form" } do |f| %>
	  <div class="form-group">
		<p>Fields with <span class="asteroid">*</span> are required.</p>
	  </div>

	  <div class="form-group row">
		<label for="name" class="col-sm-3 col-xs-4 col-form-label">Name/Title <span class="asteroid">*</span></label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.text_field :name, :required => true, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="subtitle" class="col-sm-3 col-xs-4 col-form-label">Company</label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.text_field :subtitle, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="description" class="col-sm-3 col-xs-4 col-form-label">Description</label>
		<div class="col-sm-6 col-xs-8">
		  <%= f.text_area :description, :class => 'form-control', :rows => 7 %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="avatar" class="col-sm-3 col-xs-4 col-form-label">Icon</label>
		<div class="col-sm-4 col-xs-8">
		  <%= image_tag(@person.avatar_url) if @person.avatar? %>
	      <%= f.file_field :avatar %>
	      <%= f.hidden_field :avatar_cache %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="detailed_avatar" class="col-sm-3 col-xs-4 col-form-label">Detailed Icon</label>
		<div class="col-sm-4 col-xs-8">
		  <%= image_tag(@person.detailed_avatar_url) if @person.detailed_avatar? %>
	      <%= f.file_field :detailed_avatar %>
	      <%= f.hidden_field :detailed_avatar_cache %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="website" class="col-sm-3 col-xs-4 col-form-label">Website URL</label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.text_field :website, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="youtube" class="col-sm-3 col-xs-4 col-form-label">Youtube URL</label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.text_field :youtube, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="facebook" class="col-sm-3 col-xs-4 col-form-label">Facebook Link</label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.text_field :facebook, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="twitter" class="col-sm-3 col-xs-4 col-form-label">Twitter Link</label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.text_field :twitter, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="phone" class="col-sm-3 col-xs-4 col-form-label">Phone Number</label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.text_field :phone, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="email" class="col-sm-3 col-xs-4 col-form-label">Email Address <span class="asteroid">*</span></label>
		<div class="col-sm-4 col-xs-8">
		  <%= f.email_field :email, :readonly => true, :class => 'form-control' %>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="person_type_id" class="col-sm-3 col-xs-4 col-form-label">Person Type</label>
		<div class="col-sm-4 col-xs-8">
		  <select class="form-control" name="person[person_type_id]" id="person_type_id">
		  	<option value="">Select</option>
		  	<% @person_types.each do |c| %>
		  	<option value="<%= c.id %>" <% if @person.person_type_id == c.id %>selected<% end %>><%= c.category %></option>
		  	<% end %>	
		  </select>
		</div>
	  </div>

	  <%= f.hidden_field :event_id, :value => @event.id %> 

	  <%= f.submit "Update Person", :class => 'btn btn-primary' %>
	  <%= link_to 'Back', event_data_path(event_id: @person[:event_id], category: 'people'), :class => 'btn btn-warning' %>

	<% end %>
</div>